# ==========================================
# DepanceAPP Configuration
# ==========================================

# Port exposed on host (Default: 3000)
APP_PORT=3000

# Database Connection (Required)
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://user:password@hostname:3306/depance_db"

# Security (Required)
JWT_SECRET=replace_with_a_long_secure_random_string
CLIENT_URL=http://localhost:3000

# Backup Encryption Key (Optional)
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# S3 Backup (Optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=


# S3 Backup Upload (Optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your-backup-bucket-name
# AWS_REGION=us-east-1

